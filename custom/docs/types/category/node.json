{
    "title": "Category",
    "description": "A Category for the website",
    "_parent": "n:node",
    "type": "object",
    "_qname": "ers:category",
    "properties": {
        "title": {
            "title": "Title",
            "type": "string",
            "required": true
        },
        "subTitle": {
            "title": "Sub Title",
            "type": "string",
            "required": true
        },
        "slug": {
            "title": "Slug / Alias",
            "type": "string",
            "required": true
        },
        "body": {
            "title": "Body",
            "type": "string",
            "required": false
        },
        "image": {
            "title": "Image",
            "type": "object",
            "required": false,
            "_relator": {
                "associationType": "ers:image-association",
                "nodeType": "n:node"
            }
        },
        "imageDescription": {
            "title": "Image Description",
            "type": "string",
            "required": false
        },
        "video": {
            "title": "Video",
            "type": "string",
            "required": false
        },
        "map": {
            "title": "Map",
            "type": "string",
            "required": false
        },
        "sponsors": {
            "type": "array",
            "title": "Sponsor",
            "items": {
                "type": "object",
                "title": "Sponsor",
                "properties": {
                    "text": {
                        "title": "Text",
                        "type": "string",
                        "required": true
                    },
                    "image": {
                        "title": "Image",
                        "type": "object",
                        "required": false,
                        "_relator": {
                            "associationType": "ers:sponsor-image-association",
                            "nodeType": "n:node"
                        }
                    }
                }
            }
        },
        "registerButton": {
            "title": "Register Button",
            "type": "object",
            "properties": {
                "text": {
                    "title": "Text",
                    "type": "string"
                }
            }
        }
    },
    "mandatoryFeatures": {
        "ers:homePageAvailable": {
            "enabled": true
        }
    }
}
