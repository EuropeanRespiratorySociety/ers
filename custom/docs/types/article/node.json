{
    "title": "Article",
    "description": "An Article / Blog or Event for display on the website",
    "_parent": "n:node",
    "type": "object",
    "_type": "d:type",
    "_qname": "ers:article",    
    "properties": {
        "title": {
            "title": "Title",
            "type": "string",
            "required": true
        },
        "subTitle": {
            "title": "Sub Title",
            "type": "string",
            "required": false
        },
        "slug": {
            "title": "Slug / Alias",
            "type": "string",
            "required": true
        },
        "tags": {
            "title": "Tags",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "contentType": {
            "title": "Content Type",
            "type": "string",
            "required": true,
            "enum": [
                "article",
                "event_course",
                "event_seminar",
                "event_fellowship",
                "event_award",
                "event_grant",
                "event_crc"
            ],
            "default": "article"
        },
        "type": {
            "title": "Type",
            "type": "string",
            "required": false,
            "enum": [
                "ERS Course",
                "ERS Online Course",
                "e-learning",
                "Short Term",
                "Long Term",
                "News"
            ],
            "default": ""
        },
        "flags": {
            "type": "array",
            "title": "Flags",
            "items": {
                "type": "object",
                "title": "Flag",
                "properties": {
                    "text": {
                        "title": "Text",
                        "type": "string",
                        "required": true
                    },
                    "color": {
                        "title": "Color",
                        "type": "string",
                        "enum": [
                            "notification",
                            "warning",
                            "danger"
                        ],
                        "default": "notification",
                        "required": true
                    }
                }
            }
        },
        "eventDate": {
            "title": "Event Date",
            "type": "string",
            "format": "date",
            "required": false
        },
        "eventEndDate": {
            "title": "Event End Date",
            "type": "string",
            "format": "date",
            "required": false
        },
        "eventLocation": {
            "title": "Event Location",
            "type": "string",
            "required": false
        },
        "leadParagraph": {
            "title": "Lead Paragraph",
            "type": "string",
            "required": false
        },
        "body": {
            "title": "Body",
            "type": "string",
            "required": false
        },
        "image": {
            "title": "Image",
            "type": "object",
            "required": false,
            "_relator": {
                "associationType": "ers:image-association",
                "nodeType": "n:node"
            }
        },
        "imageDescription": {
            "title": "Image Description",
            "type": "string",
            "required": false
        },
        "video": {
            "title": "Video",
            "type": "string",
            "required": false
        },
        "category": {
            "title": "Category",
            "type": "object",
            "required": false,
            "_relator": {
                "associationType": "ers:category-association",
                "nodeType": "ers:category"
            }
        },
        "deadline": {
            "title": "Deadline",
            "type": "string",
            "format": "date",
            "required": false
        },
        "earlybirdDeadline": {
            "title": "Earlybird Deadline",
            "type": "string",
            "format": "date",
            "required": false
        },
        "extendedDeadline": {
            "title": "Extended Deadline",
            "type": "string",
            "format": "date",
            "required": false
        },
        "openingDate": {
            "title": "Opening Date",
            "type": "string",
            "format": "date",
            "required": false
        },
        "programme": {
            "title": "Programme",
            "type": "object",
            "required": false,
            "_relator": {
                "associationType": "ers:programme-association",
                "nodeType": "n:node"
            }
        },
        "practicalInfo": {
            "title": "Practical Info",
            "type": "object",
            "required": false,
            "_relator": {
                "associationType": "ers:practicalInfo-association",
                "nodeType": "n:node"
            }
        },
        "feeList": {
            "title": "Fee list",
            "type": "object",
            "properties": {
                "junior": {
                    "title": "Junior",
                    "type": "integer"
                },
                "ersMember": {
                    "title": "ERS Member",
                    "type": "integer"
                },
                "nonErsMember": {
                    "title": "Non-ERS Member",
                    "type": "integer"
                },
                "industry": {
                    "title": "Industry",
                    "type": "integer"
                }
            }
        },
        "cancellationPolicy": {
            "title": "Cancellation Policy",
            "type": "string",
            "default": "Upon receipt of a written cancellation, a refund of fees, minus â‚¬50 administrative fee, will be applied up to 6 weeks before the course. After this date no refund will be made for cancellations.",
            "required": false
        },
        "related": {
            "title": "Related Article / Course",
            "type": "array",
            "required": false,
            "items": {
                "type": "object"
            },
            "_relator": {
                "associationType": "ers:related-association",
                "nodeType": "ers:article"
            }
        },
        "organisers": {
            "title": "Organisers",
            "type": "string",
            "required": false
        },
        "faculty": {
            "title": "Faculty",
            "type": "string",
            "required": false
        },
        "sponsors": {
            "type": "array",
            "title": "Sponsor",
            "items": {
                "type": "object",
                "title": "Sponsor",
                "properties": {
                    "text": {
                        "title": "Text",
                        "type": "string",
                        "required": true
                    },
                    "image": {
                        "title": "Image",
                        "type": "object",
                        "required": false,
                        "_relator": {
                            "associationType": "ers:sponsor-image-association",
                            "nodeType": "n:node"
                        }
                    }
                }
            }
        },
        "documents": {
            "title": "List of Documents",
            "type": "array",
            "required": false,
            "items": {
                "type": "object"
            },
            "_relator": {
                "associationType": "ers:document-association",
                "nodeType": "n:node"
            }
        },
        "disclosure": {
            "title": "Conflict of Interest Disclosure",
            "type": "object",
            "_relator": {
                "associationType": "ers:disclosure-association",
                "nodeType": "n:node"
            }
        },
        "venue": {
            "title": "Venue",
            "type": "object",
            "required": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                },
                "streetAddress": {
                    "type": "string"
                },
                "streetAddress2": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "postalCode": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                },
                "phoneNumber": {
                    "type": "string"
                },
                "info": {
                    "type": "string"
                }
            }
        },
        "suggestedAccommodation": {
            "title": "Suggested Accommodation",
            "type": "array",
            "required": false,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    },
                    "streetAddress": {
                        "type": "string"
                    },
                    "streetAddress2": {
                        "type": "string"
                    },
                    "city": {
                        "type": "string"
                    },
                    "postalCode": {
                        "type": "string"
                    },
                    "country": {
                        "type": "string"
                    },
                    "phoneNumber": {
                        "type": "string",
                        "title": "Phone #"
                    },
                    "info": {
                        "type": "string"
                    }
                }
            }
        },
        "registerButton": {
            "title": "Register Button",
            "type": "object",
            "properties": {
                "link": {
                    "title": "Link",
                    "type": "string"
                },
                "text": {
                    "title": "Text",
                    "type": "string"
                }
            }
        },
        "bursaryApplication": {
            "title": "Bursary Application",
            "type": "object",
            "properties": {
                "text": {
                    "title": "Text",
                    "default": "A limited number of bursaries are available which provide either full financial support to attend the course or cover the cost of the registration fee. To be eligible to apply you must be:\r\n\r\n* Under 40 years old.\r\n* A member of ERS.\r\n* From an [eligible country](pdf/education/List_of_bursary_countries.pdf).\r\n\r\nPlease note that only one bursary can be allocated per person per calendar year.\r\n\r\nSelection from the pool of applicants will be made by the organising committee based on the submission of:\r\n\r\n* Curriculum vitae\r\n* A one-page personal statement explaining how you would apply the knowledge gained from this course.",
                    "type": "string"
                },
                "deadline": {
                    "title": "Deadline",
                    "type": "string",
                    "format": "date"
                },
                "notificationOfResults": {
                    "title": "Notification of Results",
                    "type": "string",
                    "format": "date"
                },
                "applyButtonUrl": {
                    "title": "Apply Button URL",
                    "type": "string"
                }
            }
        },
        "availableOnHomepage": {
            "type": "boolean",
            "title": "Manage this content's availability on the website home page",
            "default": false
        },
        "displayOrder": {
            "type": "integer",
            "title": "Display Order"
        }
    },
    "dependencies": {
        "flags": [
            "contentType"
        ],
        "eventDate": [
            "contentType"
        ],
        "eventEndDate": [
            "contentType"
        ],
        "eventLocation": [
            "contentType"
        ],
        "leadParagraph": [
            "contentType"
        ],
        "deadline": [
            "contentType"
        ],
        "earlybirdDeadline": [
            "contentType"
        ],
        "extendedDeadline": [
            "contentType"
        ],
        "openingDate": [
            "contentType"
        ],
        "programme": [
            "contentType"
        ],
        "practicalInfo": [
            "contentType"
        ],
        "feeList": [
            "contentType"
        ],
        "cancellationPolicy": [
            "contentType"
        ],
        "organisers": [
            "contentType"
        ],
        "faculty": [
            "contentType"
        ],
        "sponsors": [
            "contentType"
        ],
        "documents": [
            "contentType"
        ],
        "disclosure": [
            "contentType"
        ],
        "venue": [
            "contentType"
        ],
        "suggestedAccommodation": [
            "contentType"
        ],
        "registerButton": [
            "contentType"
        ],
        "bursaryApplication": [
            "contentType"
        ]
    },
    "mandatoryFeatures": {
        "f:geolocation": {
            "enabled": true
        }
    }
}